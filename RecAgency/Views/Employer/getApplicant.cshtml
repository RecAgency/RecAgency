@model IEnumerable<RecAgency.Entities.SummaryAndVacancy>

@{
    ViewBag.Title = "getApplicant";
}

<h2>getApplicant</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <thead><tr><td>Date</td><td>Speciality</td><td>Education</td><td>ScopeOfWork</td><td>Salary</td><td>City</td><td>UserId</td><td></td></tr></thead>
 <tbody>

        @foreach (var item in Model) {
            <tr>
                <td>
                <td>
                    @Html.DisplayFor(modelItem => item.summary.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.summary.Speciality)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.summary.Education)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.summary.ScopeOfWork)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.summary.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.summary.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.summary.UserId)
                </td>
                <td>
                    @using (Html.BeginForm("DeleteResume", "Employer"))
                {
                        @Html.Hidden("Id", item.Id)
                        <input type="submit" value="DeleteResume" />
                }
                </td>
            </tr>
        }
                    </tbody>
                </table>
