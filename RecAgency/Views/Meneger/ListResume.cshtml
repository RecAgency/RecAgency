@using RecAgency.Entities;
@model IEnumerable<Summary>

@{
    Layout = null;
}
    @foreach (var item in Model) {
        <tr>
            <td>
            <td>@Html.ActionLink(item.Id.ToString(), "Edit", new { Controller = "Applicant", summaryId = item.Id })</td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Speciality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScopeOfWork)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @using (Html.BeginForm("DeleteResume", "Meneger"))
                {
                    @Html.Hidden("Id", item.Id)
                    <input type="submit" value="DeleteResume" />
                }
            </td>
        </tr>
    }
    
